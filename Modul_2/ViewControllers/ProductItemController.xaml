<UserControl x:Class="Modul_2.ViewControllers.ProductItemController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Modul_2.ViewControllers"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="1450">
    <Border BorderBrush="Black" 
        BorderThickness="1"
        Margin="5">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition MinWidth="900"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <!--Левый компонент-->
            <StackPanel Grid.Column="0"
                    Margin="10 0 0 0">
                <Image Source="{Binding ImagePath}"
                   MaxHeight="200"
                   MaxWidth="300"/>
            </StackPanel>
            <!--Центральный компонент-->
            <StackPanel Grid.Column="1">
                <TextBlock FontWeight="Bold">
                <Run Text="{Binding Сategory}"/>
                <Run Text=" | "/>
                <Run Text="{Binding Name}"/>
                </TextBlock>
                <TextBlock>
                <Run Text="Описание товара: "/>
                <Run Text="{Binding Description}"/>
                </TextBlock>
                <TextBlock>
                <Run Text="Производитель: "/>
                <Run Text="{Binding Manufacturer}"/>
                </TextBlock>
                <TextBlock>
                <Run Text="Поставщик: "/>
                <Run Text="{Binding Supplier}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Цена: "/>
                    <Run Name="BoxPrice" Text="{Binding Price}"/>
                    <Run Name="BoxNewPrice"/>
                </TextBlock>
                <TextBlock>
                <Run Text="Единицы измерения: "/>
                <Run Text="{Binding Unit}"/>
                </TextBlock>
                <TextBlock Name="BoxCount">
                <Run Text="Количество на складе: "/>
                <Run Text="{Binding Count}"/>
                </TextBlock>
            </StackPanel>
            <!--Правый компонент-->
            <Grid Name="BoxDiscont" Grid.Column="2">
                <TextBlock Text="{Binding Discount}"
                       FontSize="30"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
