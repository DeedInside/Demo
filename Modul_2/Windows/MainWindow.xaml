<Window x:Class="Modul_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modul_2"
        mc:Ignorable="d"
        Title="Товары" Height="850" Width="1500" FontSize="20">
    <DockPanel>
        <DockPanel Margin="5" DockPanel.Dock="Top">
            <TextBlock DockPanel.Dock="Right">
                <Run Text="Добро пожаловать "/>
                <Run Name="RunUserName"/>
            </TextBlock>
            <Button Content="Выход" 
                    Click="ButtonExit"
                    Width="100"/>
            <StackPanel>

            </StackPanel>
        </DockPanel>
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Margin="5"
                    Visibility="Collapsed"
                    Name="PanelFind">
            <TextBox Name="BoxFind" Width="150"/>
            <Label Content="Поиск"/>
            <RadioButton Content="по возрастанию"
                         Name="RadioUpp" 
                         VerticalAlignment="Center"
                         />
            <RadioButton Content="по убыванию"
                         Name="RadioDown"
                         VerticalAlignment="Center"
                         Margin="5 0 0 0"
                         />
            <ComboBox Width="180" 
                      SelectedIndex="0"
                      Name="ComboSuppliers"
                      Margin="5 0 0 0">
                <ComboBoxItem>
                    все поставщики
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Margin="5"
                    Orientation="Horizontal">
            <StackPanel Orientation="Horizontal"
                        Visibility="Collapsed"
                        Name="PanelCRUD">
                <Button Content="Добавить товар"
                        Click="ButtonAddProduct"
                        Width="160"/>
                <Button Content="Удалить товар"
                        Click="ButtonRemoveProduct"
                        Width="160"
                        Margin="5 0 0 0"/>
            </StackPanel>
            <Button Content="Список заказов"
                    Click="ButtonListRequest"
                    Width="160"
                    Margin="5 0 0 0"
                    Visibility="Collapsed"
                    Name="ButtonOrder"/>
        </StackPanel>
        <StackPanel>
            <ListBox Name="BoxProducts" Height="680"/>
        </StackPanel>
    </DockPanel>
</Window>
